# Ignore everything by default
*

# Allow essential root files
!.htaccess
!*.php
!*.html
!*.txt
!.gitignore

# Allow wp-admin and wp-includes completely
!wp-admin/
!wp-admin/**
!wp-includes/
!wp-includes/**

# Allow wp-content
!wp-content/

# Allow everything in wp-content/themes
!wp-content/themes/
!wp-content/themes/**

# Allow everything in wp-content/plugins
!wp-content/plugins/
!wp-content/plugins/**

# Still ignore media and cache folders
wp-content/uploads/
wp-content/cache/
