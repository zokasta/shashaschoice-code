# Ignore everything by default
*

# Allow these core WordPress directories
!wp-admin/
!wp-includes/
!wp-content/

# Allow root files
!*.php
!*.html
!*.txt
!.htaccess
!.gitignore

# In wp-admin, allow everything
!wp-admin/**
!wp-includes/**

# In wp-content, allow themes and plugins only
wp-content/**
# !wp-content/themes/
!wp-content/plugins/

# Still ignore media and cache folders
wp-content/uploads/
wp-content/cache/

